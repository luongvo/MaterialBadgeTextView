<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/content_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="sample.badgeview.starry.matrixxun.com.materialbadgetextview.MainActivityFragment"
        tools:showIn="@layout/activity_main">

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Hello World!" />

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EF4738"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="12sp" />


        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EF4738"
            android:text="3"
            android:textColor="@android:color/black"
            android:textSize="50sp" />

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#427fed"
            android:text="9"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#36b100"
            android:text="6123456789012"
            android:textColor="@android:color/white"
            android:textSize="25sp" />

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FB8C00"
            android:text="57"
            android:textSize="14sp" />

        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:id="@+id/test_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#EF4738"
            android:text="99+"
            android:textColor="@android:color/white"
            android:textSize="16sp" />


        <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="#FB8C00"
            android:text="MaterialBadgeTextView - No shadow"
            android:textSize="16sp"
            app:mbtv_shadow="false" />

        <FrameLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginTop="16dp"
            android:background="@android:color/holo_blue_bright">

            <com.matrixxun.starry.badgetextview.MaterialBadgeTextView
                android:id="@+id/just_new_feature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#EF4738"
                app:mbtv_shadow="false" />

        </FrameLayout>

    </LinearLayout>
</ScrollView>